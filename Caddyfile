{
    email admin@loyaltyladies.com
}

# Redirect www -> apex
www.loyaltyladies.com {
    redir https://loyaltyladies.com{uri} permanent
}

www.punchcard.co.za {
    redir https://punchcard.co.za{uri} permanent
}

# Serve both domains from the same app
loyaltyladies.com, punchcard.co.za {
    handle /api/* {
        reverse_proxy api:8000
    }

    handle {
        reverse_proxy web:80
    }
}
