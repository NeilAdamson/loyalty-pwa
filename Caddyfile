{
    email admin@loyaltyladies.com
}

# Redirect www to non-www (Best for SEO & CORS)
www.loyaltyladies.com {
    redir https://loyaltyladies.com{uri}
}

loyaltyladies.com {
    # Serve API requests (Keep path prefix /api so backend receives /api/v1/...)
    handle /api/* {
        reverse_proxy api:8000
    }

    # Serve Frontend
    handle /* {
        reverse_proxy web:80
    }
}
